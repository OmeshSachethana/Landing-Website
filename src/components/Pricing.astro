<script>
  document.addEventListener('DOMContentLoaded', function() {
    const billingToggle = document.getElementById('billing-toggle');
    const toggleIndicator = document.getElementById('toggle-indicator');
    let isYearly = false;
    
    // Price data
    const prices = {
      monthly: {
        basic: { price: 19, period: '/month', billing: 'Billed monthly' },
        pro: { price: 49, period: '/month', billing: 'Billed monthly' },
        enterprise: { price: 99, period: '/month', billing: 'Billed monthly' }
      },
      yearly: {
        basic: { price: 15, period: '/month', billing: 'Billed yearly ($180/year)' },
        pro: { price: 39, period: '/month', billing: 'Billed yearly ($468/year)' },
        enterprise: { price: 79, period: '/month', billing: 'Billed yearly ($948/year)' }
      }
    };
    
    // Update prices
    function updatePrices() {
      const plan = isYearly ? 'yearly' : 'monthly';
      const data = prices[plan];
      
      // Update Basic Plan
      document.getElementById('price-basic').textContent = `$${data.basic.price}`;
      document.getElementById('period-basic').textContent = data.basic.period;
      document.getElementById('billing-basic').textContent = data.basic.billing;
      
      // Update Pro Plan
      document.getElementById('price-pro').textContent = `$${data.pro.price}`;
      document.getElementById('period-pro').textContent = data.pro.period;
      document.getElementById('billing-pro').textContent = data.pro.billing;
      
      // Update Enterprise Plan
      document.getElementById('price-enterprise').textContent = `$${data.enterprise.price}`;
      document.getElementById('period-enterprise').textContent = data.enterprise.period;
      document.getElementById('billing-enterprise').textContent = data.enterprise.billing;
    }
    
    // Toggle billing
    billingToggle.addEventListener('click', function() {
      isYearly = !isYearly;
      
      // Move toggle indicator
      if (isYearly) {
        toggleIndicator.classList.remove('translate-x-0');
        toggleIndicator.classList.add('translate-x-8');
      } else {
        toggleIndicator.classList.remove('translate-x-8');
        toggleIndicator.classList.add('translate-x-0');
      }
      
      // Update prices
      updatePrices();
    });
    
    // Initialize prices
    updatePrices();
  });
</script>

