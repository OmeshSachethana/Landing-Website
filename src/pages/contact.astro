---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact Us">
  <div class="container mx-auto max-w-4xl py-20 px-4">
    <h1 class="text-4xl font-bold mb-2">Contact Us</h1>
    <p class="text-xl text-gray-600 dark:text-gray-400 mb-12">
      Get in touch with our team
    </p>
    
    <div class="grid md:grid-cols-2 gap-12">
      <!-- Contact Form -->
      <div>
        <form class="space-y-6">
          <div>
            <label for="name" class="block text-sm font-medium mb-2">Name</label>
            <input 
              type="text" 
              id="name" 
              class="w-full px-4 py-3 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-700 rounded-lg focus:border-cyan-500 focus:outline-none"
              required
            />
          </div>
          
          <div>
            <label for="email" class="block text-sm font-medium mb-2">Email</label>
            <input 
              type="email" 
              id="email" 
              class="w-full px-4 py-3 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-700 rounded-lg focus:border-cyan-500 focus:outline-none"
              required
            />
          </div>
          
          <div>
            <label for="message" class="block text-sm font-medium mb-2">Message</label>
            <textarea 
              id="message" 
              rows="5"
              class="w-full px-4 py-3 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-700 rounded-lg focus:border-cyan-500 focus:outline-none"
              required
            ></textarea>
          </div>
          
          <button type="submit" class="w-full px-6 py-3 bg-gradient-to-r from-cyan-500 to-blue-600 text-white font-medium rounded-lg hover:opacity-90 transition-opacity">
            Send Message
          </button>
        </form>
      </div>
      
      <!-- Contact Info -->
      <div class="space-y-8">
        <div>
          <h3 class="text-xl font-bold mb-4">Contact Information</h3>
          <div class="space-y-4">
            <div class="flex items-center">
              <div class="w-10 h-10 bg-gradient-to-r from-cyan-500 to-blue-600 rounded-lg flex items-center justify-center mr-4">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div>
                <p class="font-medium">Email</p>
                <p class="text-gray-600 dark:text-gray-400">contact@example.com</p>
              </div>
            </div>
            
            <div class="flex items-center">
              <div class="w-10 h-10 bg-gradient-to-r from-cyan-500 to-blue-600 rounded-lg flex items-center justify-center mr-4">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <p class="font-medium">Location</p>
                <p class="text-gray-600 dark:text-gray-400">San Francisco, CA</p>
              </div>
            </div>
          </div>
        </div>
        
        <div>
          <h3 class="text-xl font-bold mb-4">Business Hours</h3>
          <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-6">
            <ul class="space-y-3">
              <li class="flex justify-between">
                <span>Monday - Friday</span>
                <span class="font-medium">9:00 AM - 6:00 PM</span>
              </li>
              <li class="flex justify-between">
                <span>Saturday</span>
                <span class="font-medium">10:00 AM - 4:00 PM</span>
              </li>
              <li class="flex justify-between">
                <span>Sunday</span>
                <span class="font-medium">Closed</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>